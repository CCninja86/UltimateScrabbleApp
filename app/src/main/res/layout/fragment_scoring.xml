<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.james.ultimatescrabbleapp.ScoringFragment">

    <!-- TODO: Update blank fragment layout -->
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:listitem="@android:layout/simple_list_item_1"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/btnShowScores"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores"
        android:id="@+id/btnShowScores"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        android:background="@drawable/tab_border"
        android:textColor="#ffffff"
        android:gravity="center_vertical|center"
        style="@style/Base.Widget.AppCompat.ActionBar.TabView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word Finder"
        android:id="@+id/btnWordFinder"
        android:textSize="16dp"
        android:background="@drawable/tab_border"
        android:drawableTop="@drawable/magnifier_tool_32"
        android:textColor="#ffffff"
        android:gravity="center_vertical|center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Base.Widget.AppCompat.ActionBar.TabView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tile Breakdown"
        android:id="@+id/btnTileBreakdown"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnShowScores"
        android:layout_toStartOf="@+id/btnWordFinder"
        android:layout_toLeftOf="@+id/btnWordFinder"
        android:textSize="16dp"
        android:background="@drawable/tab_border"
        android:textColor="#ffffff"
        android:gravity="center_vertical|center"
        style="@style/Base.Widget.AppCompat.ActionBar.TabView" />

</RelativeLayout>
